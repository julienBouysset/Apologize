<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Apologize{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/client-' ~ app.request.attributes.get("_route") ~ '.css') }}">
        {% endblock %}
    </head>
    <body>
        <div id="app">
            {% set subsitesName = app.request.attributes.get("_route")|split('_')|first %}
            <header>{{ vueLogo(subsitesName) | raw }}</header>
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('build/client-' ~ app.request.attributes.get("_route") ~ '.js') }}"></script>
        {% endblock %}
    </body>
</html>